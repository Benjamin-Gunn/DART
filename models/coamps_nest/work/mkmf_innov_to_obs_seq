# http://www.image.ucar.edu/DAReS/DART/DART_download
#
# DART $Id$

if (! $?HDF_DIR) then
   set HDF_DIR = /auto/soft/hdf5/CentOS_6_pgi
endif

set HDFINCDIR = "-I${HDF_DIR}/include"
set HDFLIBDIR = "-L${HDF_DIR}/lib"
set   HDFLIBS = "-lhdf5hl_fortran -lhdf5_fortran"

../../../build_templates/mkmf -p innov_to_obs_seq -t ../../../build_templates/mkmf.template \
 -l "${HDFINCDIR} ${HDFLIBDIR} ${HDFLIBS}" \
 -c "-DHDF5" -a "../../.." path_names_innov_to_obs_seq 

exit $status

# <next few lines under version control, do not edit>
# $URL$
# $Revision$
# $Date$

